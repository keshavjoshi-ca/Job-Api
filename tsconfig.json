{
    "compilerOptions": {
        "target": "ES5",                          
        "module": "CommonJS",                    
        "lib": ["ES2021", "ScriptHost"],
        "moduleResolution": "node",
        "allowJs": true,
        "rootDir": "src",
        // "strict": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        // "preserveSymlinks": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        // "sourceMap": true,
        "useUnknownInCatchVariables": false,
    }
}